<script>
  jQuery(function($) {
    var location = $('.block-swatch-list.v{{settings.location_option | handle}} .block-swatch .block-swatch__radio:input[type=radio]:checked').val();
    if (location === '{{settings.location_value1}}') {
      $('#location-msg').html('{{settings.location_message1}}');
    } else if (location === '{{settings.location_value2}}') {
      $('#location-msg').html('{{settings.location_message2}}');
    }
    $('.block-swatch-list.vlocation .block-swatch').click(function(e) {
      var location = $(this).find('.block-swatch__radio:input[type=radio]:checked').val();
      if (location === '{{settings.location_value1}}') {
        $('#location-msg').html('{{settings.location_message1}}');
      } else if (location === '{{settings.location_value2}}') {
        $('#location-msg').html('{{settings.location_message2}}');
      }
    });
  });
</script>

